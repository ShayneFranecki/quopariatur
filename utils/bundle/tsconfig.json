{
    "compilerOptions": {
        "module": "umd",
        "moduleResolution": "node",
        "declaration": true,
        "declarationDir": "./types",
        "noImplicitAny": false,
        "noEmitOnError": false,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "noImplicitThis": true,
        "target": "es6",
        "outDir": "./lib-umd",
        "lib": [
            "es6",
            "dom",
            "es2015.promise"
        ]
    },
    "include": [
        "src/*"
    ]
}